{
  "name": "rock-paper-scissors-game",
  "version": "1.0.0",
  "description": "A web-based Rock Paper Scissors game with AI and multiplayer support",
  "main": "electron-main.js",
  "scripts": {
    "start": "node server/server.js",
    "dev": "nodemon server/server.js",
    "test": "jest",
    "test:watch": "jest --watch",
    "app": "electron .",
    "app:dev": "electron .",
    "build": "electron-builder --publish never",
    "build:appimage": "electron-builder --linux appimage --publish never"
  },
  "keywords": [
    "game",
    "rock-paper-scissors",
    "multiplayer",
    "ai",
    "websocket"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "cors": "^2.8.5",
    "express": "^4.18.2",
    "socket.io": "^4.7.2",
    "uuid": "^9.0.1"
  },
  "devDependencies": {
    "@types/node": "^20.8.0",
    "electron": "^29.0.0",
    "electron-builder": "^24.13.3",
    "jest": "^29.7.0",
    "nodemon": "^3.0.1"
  },
  "build": {
    "appId": "com.ivan.rockpaperscissors",
    "productName": "Rock Paper Scissors",
    "files": [
      "electron-main.js",
      "server/**/*",
      "client/**/*",
      "shared/**/*",
      "package.json"
    ],
    "directories": {
      "buildResources": "assets"
    },
    "linux": {
      "target": [
        "AppImage"
      ],
      "icon": "assets/scissors-icon.svg",
      "category": "Game"
    }
  },
  "engines": {
    "node": ">=16.0.0"
  }
}
